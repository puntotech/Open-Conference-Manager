{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@modules/*": ["src/domain/*"],
      "@guards/*": ["src/shared/guards/*"],
      "@config/*": ["src/shared/config/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"],
  "include": ["**/*.ts"]
}
